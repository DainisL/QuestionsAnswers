<h1>Listing questions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Question</th>
    <th>Answer type</th>
    <th>Create date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr><div></div class="text">
    <td><%= question.title %></td>
    <td><%= question.question %></td>
    <td><%= question.answer_type %></td>
    <td><%= question.create_date %></td>
    </div>
    <% if current_user %> 
        <% if is_answered?(question.id) < 0 %>
           <td>
         <div class="button">
           <%= link_to 'Answer',new_answer_path(:question_id => question.id ) %>
         </div>
           </td>
        <% end %>
    <% end %>
    
 <td>
  <div class="button">
  <%= link_to 'Show', question %>
</div>
</td>
  </tr>
<% end %>
</table>

