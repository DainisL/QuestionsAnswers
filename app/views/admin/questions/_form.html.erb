<%= form_for([:admin, @question]) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= @survey.title %>
  <%= f.hidden_field :survey_id, :value => params[:survey_id] %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </div>
  <div class="field">
    <%= f.label :answer_type %><br />
    <%= f.select :answer_type, [["Number","integer"],["Text", "text"],["Combo Answer", "combo"]] %>
  </div>

  <h2> Possible answers to separate |</h2>
  <div class="field">
    <%= f.label :possible_answers %><br />
    <%= f.text_area :possible_answers  %>
  </div>


  <div class="field">
    <%= f.label :create_date %><br />
    <%= f.datetime_select :create_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
